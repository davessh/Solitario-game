<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaz.SolitaireJuegoController">
    <children>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2d5016; -fx-padding: 10;">
            <children>
                <Label text="Solitario Klondike" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Button fx:id="btnNuevoJuego" mnemonicParsing="false" onAction="#handleNuevoJuego" text="Nuevo Juego" />
                <Button fx:id="btnMenu" mnemonicParsing="false" onAction="#handleVolverMenu" text="Menú" />
            </children>
        </HBox>

        <HBox spacing="20.0" style="-fx-background-color: #0f4a0f; -fx-padding: 20;">
            <children>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Stock" textFill="WHITE" />
                        <Pane fx:id="drawPilePane" onMouseClicked="#handleDrawPileClick" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Waste" textFill="WHITE" />
                        <Pane fx:id="wastePilePane" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <Pane HBox.hgrow="ALWAYS" />


                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="♠" textFill="WHITE">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Pane fx:id="foundationSpades" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="♥" textFill="RED">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Pane fx:id="foundationHearts" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="♦" textFill="RED">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Pane fx:id="foundationDiamonds" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="♣" textFill="WHITE">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Pane fx:id="foundationClubs" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: #1a5c1a; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </HBox>


        <HBox spacing="15.0" style="-fx-background-color: #0f4a0f; -fx-padding: 20;">
            <children>

                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau1" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>


                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau2" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>


                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau3" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau4" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau5" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau6" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" prefWidth="100.0">
                    <children>
                        <Pane fx:id="tableau7" prefHeight="400.0" prefWidth="85.0"
                              style="-fx-background-color: rgba(26, 92, 26, 0.3); -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-width: 2; -fx-border-style: dashed; -fx-background-radius: 8; -fx-border-radius: 8;" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2d5016; -fx-padding: 10;">
            <children>
                <Label fx:id="lblEstado" text="Juego iniciado" textFill="WHITE" />
                <Label fx:id="lblMovimientos" text="Movimientos: 0" textFill="WHITE" />
                <Label fx:id="lblTiempo" text="Tiempo: 00:00" textFill="WHITE" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>