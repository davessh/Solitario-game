<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background: linear-gradient(to bottom, #1a472a, #0f4a0f);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaz.SolitaireJuegoController">
    <children>
        <!-- Header mejorado -->
        <HBox alignment="CENTER" spacing="30.0" style="-fx-background: linear-gradient(to bottom, #2d5016, #1a472a);                                                    -fx-padding: 15;                                                    -fx-background-radius: 10;                                                    -fx-border-radius: 10;                                                    -fx-border-color: #4a7c59;                                                    -fx-border-width: 2;">
            <children>
                <Label style="-fx-font-weight: bold;" text="Solitario">
                    <font>
                        <Font name="Arial Bold" size="32.0" />
                    </font>
                    <effect>
                        <DropShadow color="#000000" offsetX="1.0" offsetY="1.0" radius="3.0" />
                    </effect>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.26066350710900477">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.8973755240440369" green="0.9342105388641357" blue="0.6184819936752319" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.4447368383407593" green="0.5131579041481018" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </textFill>
                </Label>

                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnUndo" mnemonicParsing="false" onAction="#handleUndo" prefHeight="40.0" prefWidth="100.0"
                        style="-fx-background-color: linear-gradient(to bottom, #9C27B0, #7B1FA2);
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-border-radius: 8;
                               -fx-font-weight: bold;" text="↶ Undo">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>

                <Button fx:id="btnNuevoJuego" mnemonicParsing="false" onAction="#handleNuevoJuego" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049);                                -fx-text-fill: white;                                -fx-background-radius: 8;                                -fx-border-radius: 8;                                -fx-font-weight: bold;" text="Nuevo Juego">
               <font>
                  <Font size="13.0" />
               </font></Button>

                <Button fx:id="btnMenu" mnemonicParsing="false" onAction="#handleVolverMenu" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: linear-gradient(to bottom, #FF9800, #F57C00);                                -fx-text-fill: white;                                -fx-background-radius: 8;                                -fx-border-radius: 8;                                -fx-font-weight: bold;" text="Menú" />
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 0 20 0 20;">
            <children>
                <VBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Stock" textFill="WHITE" />
                        <Pane fx:id="drawPilePane" onMouseClicked="#handleDrawPileClick" prefHeight="140.0" prefWidth="100.0" style="-fx-background-color: #1a5c1a;                                      -fx-border-color: #4a7c59;                                      -fx-border-width: 3;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;                                      -fx-cursor: hand;">
                            <effect>
                                <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Pane>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Waste" textFill="WHITE" />
                        <Pane fx:id="wastePilePane" prefHeight="140.0" prefWidth="100.0" style="-fx-background-color: #1a5c1a;                                      -fx-border-color: #4a7c59;                                      -fx-border-width: 3;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;">
                            <effect>
                                <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                            </effect>
                        </Pane>
                    </children>
                </VBox>
                <Pane minWidth="50.0" HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♠" textFill="WHITE">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="1.0" offsetY="1.0" radius="2.0" />
                                    </effect>
                                </Label>
                                <Pane fx:id="foundationSpades" prefHeight="120.0" prefWidth="85.0" style="-fx-background-color: #1a5c1a;                                              -fx-border-color: #4a7c59;                                              -fx-border-width: 3;                                              -fx-background-radius: 12;                                              -fx-border-radius: 12;">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                </Pane>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♥" textFill="#FF6B6B">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="1.0" offsetY="1.0" radius="2.0" />
                                    </effect>
                                </Label>
                                <Pane fx:id="foundationHearts" prefHeight="120.0" prefWidth="85.0" style="-fx-background-color: #1a5c1a;                                              -fx-border-color: #4a7c59;                                              -fx-border-width: 3;                                              -fx-background-radius: 12;                                              -fx-border-radius: 12;">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                </Pane>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♦" textFill="#FF6B6B">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="1.0" offsetY="1.0" radius="2.0" />
                                    </effect>
                                </Label>
                                <Pane fx:id="foundationDiamonds" prefHeight="120.0" prefWidth="85.0" style="-fx-background-color: #1a5c1a;                                              -fx-border-color: #4a7c59;                                              -fx-border-width: 3;                                              -fx-background-radius: 12;                                              -fx-border-radius: 12;">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                </Pane>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="♣" textFill="WHITE">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="1.0" offsetY="1.0" radius="2.0" />
                                    </effect>
                                </Label>
                                <Pane fx:id="foundationClubs" prefHeight="120.0" prefWidth="85.0" style="-fx-background-color: #1a5c1a;                                              -fx-border-color: #4a7c59;                                              -fx-border-width: 3;                                              -fx-background-radius: 12;                                              -fx-border-radius: 12;">
                                    <effect>
                                        <DropShadow color="#000000" offsetX="2.0" offsetY="2.0" radius="5.0" />
                                    </effect>
                                </Pane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 0 20 20 20;" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau1" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau2" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau3" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau4" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau5" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau6" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Pane fx:id="tableau7" minHeight="400.0" minWidth="85.0" prefHeight="500.0" style="-fx-background-color: rgba(26, 92, 26, 0.4);                                      -fx-border-color: rgba(74, 124, 89, 0.8);                                      -fx-border-width: 3;                                      -fx-border-style: solid;                                      -fx-background-radius: 12;                                      -fx-border-radius: 12;" />
                    </children>
                </VBox>
            </children>
         <effect>
            <Bloom threshold="1.0" />
         </effect>
        </HBox>
        <HBox alignment="CENTER" spacing="40.0" style="-fx-background: linear-gradient(to bottom, #2d5016, #1a472a);                                                    -fx-padding: 15;                                                    -fx-background-radius: 10;                                                    -fx-border-radius: 10;                                                    -fx-border-color: #4a7c59;                                                    -fx-border-width: 2;">
            <children>
                <Label fx:id="lblEstado" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Juego iniciado" textFill="WHITE" />
                <Label fx:id="lblMovimientos" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Movimientos: 0">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.8783950805664062" green="1.0" blue="0.08796296268701553" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.9222221970558167" green="1.0" blue="0.4166666567325592" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill></Label>
                <Label fx:id="lblTiempo" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tiempo: 00:00">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="1.0" green="0.7532407641410828" blue="0.4305555522441864" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="0.24537037312984467" blue="0.24537037312984467" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill></Label>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
